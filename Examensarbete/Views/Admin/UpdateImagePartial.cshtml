@model Service.DTO.ImageModel



<div id="modalUpdateImg@(Model.Id)" class="modal fade" role="dialog">
    <div class="modal-dialog">

        @using (Html.BeginForm("UpdateImage", "Admin"))
        {
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="modalTitle">Ändra text</h4>
                </div>
                <div class="modal-body">

                    <input type="hidden" id="@Model.Id" name="Id" value="@Model.Id" />
                    @Html.Hidden("categoryId", (object)ViewBag.catId)
                    <div>
                        <img src="@Url.Action("GetImage", "Admin", new { imageId = Model.Id, categoryId = ViewBag.catId })"  style="width:100%;height:100%;max-width:450px;max-height:350px;" />
                    </div>
                    <div>
                        <br />
                        @Html.Label("Info text")
                        @Html.TextBoxFor(m => m.Info)
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" style="float:left" data-dismiss="modal">Avbryt</button>
                    <input value="Ändra" type="submit" class="btn btn-primary">

                </div>
            </div>
        }
    </div>
</div>




