@model Domain.Entities.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "AdminLayout.cshtml";
}

<h2>Lägg till kategori</h2>
<br />
@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Namn på kategorin")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Beskrivning")
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div>                    
        <input type="file" name="image" id="image" class="btn-default">
    </div>
    <br />
        <input type="submit" value="Spara" class="btn btn-primary" />
}