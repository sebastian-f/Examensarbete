@model Service.DTO.CategoryModel

@{
    ViewBag.Title = "AddCategory";
    Layout = "AdminLayout.cshtml";
}

<h2>Lägg till kategori</h2>
<br />
@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Namn på kategorin")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model=>model.Name)
    </div>
    <div class="form-group">
        @Html.Label("Beskrivning")
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    </div>
    @*<div>    
        @Html.Label("Bilder")                
        <input type="file" name="images" id="images" class="btn-default" multiple>
    </div>*@
    <br />
        <input type="submit" value="Spara" class="btn btn-primary" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}