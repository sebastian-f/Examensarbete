@model Examensarbete.Models.AddRoomViewModel

@{
    ViewBag.Title = "Add room";
    Layout = "AdminLayout.cshtml";
}

<h2>Lägg till rum</h2>

@if(Model.Categories.Count() != 0)
{ 
    using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.Label("Rumsnummer/namn")
            @Html.TextBoxFor(m => m.RoomNumber, new {@class="form-control" })
            @Html.ValidationMessageFor(m=>m.RoomNumber)
        </div>
        <div class="form-group">
            @Html.Label("Välj kategori")
            @Html.DropDownList("categoryId", Model.Categories, new { @class="form-control"})
        </div>
    
        <input type="submit" value="Spara" class="btn btn-info" />
    
    }

    
}else{
    //If there are no categories you must first create at least one
    <br />
    <h4>Det finns inga kategorier! Skapa en kategori först.</h4>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}